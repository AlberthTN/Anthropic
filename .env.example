# =============================================================================
# CONFIGURACIÓN DE EJEMPLO PARA CLAUDE PROGRAMMING AGENT
# =============================================================================
# Copia este archivo a .env y configura tus valores reales
# NUNCA compartas este archivo con credenciales reales en repositorios públicos

# =============================================================================
# ANTHROPIC CLAUDE CONFIGURATION
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-tu_claude_api_key_aqui
CLAUDE_MODEL=claude-4.0

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================
SLACK_BOT_TOKEN=xoxb-tu-bot-token-aqui
SLACK_APP_TOKEN=xapp-tu-app-token-aqui
SLACK_SIGNING_SECRET=tu-signing-secret-aqui

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=claude-slack-agent
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# GOOGLE CLOUD PLATFORM (OPCIONAL - PARA MEMORIA PERSISTENTE)
# =============================================================================
# Configuración para BigQuery (memoria persistente)
BIGQUERY_PROJECT_ID=tu-proyecto-gcp
BIGQUERY_DATASET=agente_anthropic
BIGQUERY_LOCATION=us-central1
BIGQUERY_MAX_BYTES_BILLED=30000000000

# Credenciales de servicio de Google Cloud (JSON completo)
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"tu-proyecto","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"...","universe_domain":"googleapis.com"}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=tu-secret-key-super-seguro-aqui
JWT_SECRET=tu-jwt-secret-super-seguro-aqui

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
MAX_CODE_LENGTH=10000
MAX_EXECUTION_TIME=30
ALLOWED_PROGRAMMING_LANGUAGES=python,javascript,typescript,java,csharp,go,rust,php,ruby,swift,kotlin,dart

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
ENABLE_UNIT_TESTS=true
ENABLE_CODE_ANALYSIS=true
ENABLE_SECURITY_CHECKS=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_TYPE=development
# Opciones: development, staging, production

# =============================================================================
# DATABASE CONFIGURATION (OPCIONAL)
# =============================================================================
DATABASE_URL=sqlite:///./claude_agent.db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_PORT=8080